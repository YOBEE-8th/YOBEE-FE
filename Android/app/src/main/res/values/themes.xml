<resources>
    <!-- Base application theme. -->
    <style name="Theme.Yobee" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bittersweet_400</item>
        <item name="colorPrimaryVariant">@color/bittersweet_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bittersweet_400</item>
        <item name="colorSecondaryVariant">@color/bittersweet_400</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="textAppearanceHeadline6">@style/ToolbarStyle</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- AppCompat Button Style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
    </style>

    <style name="ButtonStyle.LargeStyle" parent="ButtonStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonStyle.SmallStyle" parent="ButtonStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonStyle.LargeStyle.BitterSweet4008Style" parent="ButtonStyle.LargeStyle">
        <item name="android:background">@drawable/bg_rectangle_radius8_bittersweet400</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="ButtonStyle.LargeStyle.BitterSweet2008Style" parent="ButtonStyle.LargeStyle">
        <item name="android:background">@drawable/bg_rectangle_radius8_bittersweet200</item>
        <item name="android:textColor">@color/atomic</item>
    </style>

    <style name="ButtonStyle.LargeStyle.Grey3008Style" parent="ButtonStyle.LargeStyle">
        <item name="android:background">@drawable/bg_rectangle_radius8_grey200</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle.SmallStyle.BitterSweet4008Style" parent="ButtonStyle">
        <item name="android:background">@drawable/bg_rectangle_radius8_bittersweet400</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="ButtonStyle.SmallStyle.White8BitterSweet400Stroke1Style" parent="ButtonStyle">
        <item name="android:background">
            @drawable/bg_rectangle_radius8_white_bittersweet400_stroke1
        </item>
        <item name="android:textColor">@color/bittersweet_400</item>
    </style>

    <!-- EditText -->
    <style name="TextInputLayoutRadius8BitterSweet200Stroke1Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/bg_rectangle_radius8_bittersweet200_stroke1</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="android:fontFamily">@font/nanum_gothic_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- TextView -->
    <style name="TextViewExtraBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_gothic_extrabold</item>
    </style>

    <style name="TextViewBold" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
    </style>

    <style name="TextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nanum_gothic_regular</item>
    </style>

    <style name="TextViewExtraBold.Size48" parent="TextViewExtraBold">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="TextViewBold.Size24" parent="TextViewBold">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewBold.Size22" parent="TextViewBold">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextViewBold.Size18" parent="TextViewBold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewBold.Size14" parent="TextViewBold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewBold.Size12" parent="TextViewBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewBold.Size10" parent="TextViewBold">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextViewRegular.Size20" parent="TextViewRegular">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextViewRegular.Size18" parent="TextViewRegular">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewRegular.Size16" parent="TextViewRegular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewRegular.Size14" parent="TextViewRegular">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextViewRegular.Size12" parent="TextViewRegular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewRegular.Size11" parent="TextViewRegular">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextViewRegular.Size10" parent="TextViewRegular">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- spinner -->
    <style name="SpinnerRadius8BitterSweet400Stroke1Style" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_rectangle_radius8_bittersweet400_stroke1</item>
        <item name="android:fontFamily">@font/nanum_gothic_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- checkbox -->
    <style name="CheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_circle_checkbox</item>
    </style>

    <!-- bottomSheet -->
    <style name="BottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- dialog -->
    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">1</item>
    </style>
</resources>